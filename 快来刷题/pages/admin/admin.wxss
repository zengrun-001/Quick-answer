/* pages/admin/admin.wxss */
page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.viewLogin {
  margin: 20%;
  padding: 3% 3%;
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: stretch;
  border: 1px solid wheat;
  background-color: rgba(255, 192, 203, 0.4);
}

.viewLogin-button {
  margin: 8% 1% 3% 1%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: stretch;
}

.viewLogin-input {
  margin: 3% 3%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: stretch;  
}

.viewLogin-input__title {
  width: 25%;
  padding: 3% 1% 3% 1%;  
  text-align: left;
}

.viewLogin-input__content {
  width: 75%;
  padding: 3% 1% 3% 1%;
  text-align: center;
  border: 1px solid wheat;
}

.viewContent {
  padding: 5% 5%;
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  border: 2px solid red;
}