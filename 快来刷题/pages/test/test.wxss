/* pages/test/test.wxss */
page{
  background-image: url('');
  background-repeat: round;
  flex: flex;
  flex-direction: column;
  align-items: stretch;
}

.huapage{
  position: absolute;
  padding: 1% 1%;
  height: 79%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  word-break: break-all;
  text-align: justify;
}

.huapage-subject__top {
  margin-left: 20%;
  border-top: 2px solid wheat;
}

.huapage-subject {
  margin-top: 1%;
  padding: 3% 5%;
  border-bottom: 2px solid wheat;
}

.huapage-scrollview {
  margin: 0 0;
  width: 99%;
}

.huapage-options {
  line-height: 2;
  padding-left: 10%;
  padding-right: 5%;
  border-bottom: 2px solid wheat;
}

.huapage-analysis{
  position: relative;
  margin-left: 30rpx;
  margin-top: -40rpx;
}

.hua-cell {
  padding: 2% 3% 1% 3%;
  position:relative;
  display:flex;
  align-items:center;
  height: 15%;
  justify-content: flex-end;
  line-height: 1.6;
}

.hua-cell__subjectIndex {
  color: red;
  font-size: 16pt;
  font-style: italic;
}
.hua-cell__subjectNum {
  font-size: 16pt;
}

.page-footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 8%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.huaBottomBtn {
  width: 100%;
  background-color: rgba(245, 222, 179, 0.3);
  border-radius: 0;
}

.huaBottomBtn-hover {
  background-color: rgba(245, 222, 179, 1);
}


